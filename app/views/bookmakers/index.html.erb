<h1><b>Books</b></h1>

<table>
  <thead>
    <th><b>Title</b></th>
    <th><b>Body</b></th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <%  @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', bookmaker_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_bookmaker_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_bookmaker_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
   </tr>
   <% end %>
  </tbody>
</table>


<h2><b>New book</b></h2>
<div class= field_with_errors>
    <% if @book && @book.errors.any? %>
    <%= @book.errors.count %>error(s) occoured.
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

<%= form_with model: Book.new, url:'/bookmakers', local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


