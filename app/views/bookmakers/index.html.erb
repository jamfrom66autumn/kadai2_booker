<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', bookmaker_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_bookmaker_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_bookmaker_path(book.id), method: :delete, data: { confirm: 'Are you sure?'} %></td>
   </tr>
   <% end %>
  </tbody>
</table>


<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: Book.new, url:'/bookmakers', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


